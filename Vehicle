class Vehicle {
private:
    std::string make;
    std::string model;
    std::string color;
    int mpg;
    double msrp;

public:
    Vehicle(std::string mk, std::string mdl, std::string clr, int m, double price)
        : make(mk), model(mdl), color(clr), mpg(m), msrp(price) {}

    virtual ~Vehicle() {}

    std::string getMake() const { return make; }
    std::string getModel() const { return model; }
    std::string getColor() const { return color; }
    int getMPG() const { return mpg; }
    double getMSRP() const { return msrp; }

    virtual void printDetails() const {
        std::cout << "Make: " << make << "\nModel: " << model
                  << "\nColor: " << color << "\nMPG: " << mpg
                  << "\nMSRP: $" << msrp << std::endl;
    }

    virtual std::string getType() const = 0; // pure virtual
};